name: iFlow Mass Uploader

on:
  workflow_dispatch:
    inputs:
      environment:
        description: 'Environment to run the script against'
        required: true
        type: choice
        options:
        - dev
        - stage
        default: 'dev'
      repository:
        description: 'The repository to restore iFlows from'
        required: true
        default: 'msrivastava16/cement-integration'
      branch:
        description: 'The branch of the content repository to use'
        required: true
        default: 'main'

jobs:
  upload:
    runs-on: ubuntu-latest
    environment: ${{ github.event.inputs.environment }}

    steps:
    - name: Checkout Content Repository
      uses: actions/checkout@v3
      with:
        repository: ${{ github.event.inputs.repository }}
        ref: ${{ github.event.inputs.branch }}
        path: content_repo

    - name: Checkout Script Repository
      uses: actions/checkout@v3
      with:
        path: script_repo

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.x'

    - name: Install dependencies
      run: pip install -r script_repo/requirements.txt

    - name: Run uploader script
      run: |
        python script_repo/createPackageAndFlows.py --source-dir content_repo/Get_All_Packages
      env:
        OAUTH_URL: ${{ secrets.OAUTH_URL }}
        CLIENT_ID: ${{ secrets.CLIENT_ID }}
        CLIENT_SECRET: ${{ secrets.CLIENT_SECRET }}
        BASE_URL: ${{ secrets.BASE_URL }}